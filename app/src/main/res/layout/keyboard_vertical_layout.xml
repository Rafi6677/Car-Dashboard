                <include
                    android:id="@+id/button22"
                    layout="@layout/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"/>

                <include
                    android:id="@+id/button23"
                    layout="@layout/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"/>

                <!-- row3 -->

                <include
                    android:id="@+id/button31"
                    layout="@layout/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"/>

                <include
